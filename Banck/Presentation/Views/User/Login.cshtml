@{
    ViewBag.Title = "Login";
    Layout = null;

}

<head>
    @Styles.Render("~/Content/UserLogin/css")
    @Styles.Render("~/Content/Notifications/css")
</head>

<!-- Mensajes de éxito y error -->
@if (TempData["ErrorMessage"] != null)
{
    <div id="notification" class="notification error">
        @TempData["ErrorMessage"]
    </div>
}


<body>
    <div class="container">
        <div class="form-container sign-in-container">
            @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <h2>Iniciar Sesión</h2>

                <div class="form-group">
                    <label for="email">Correo Electrónico:</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Ingrese su correo" required />
                </div>
                <div class="form-group">
                    <label for="password">Contraseña:</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Ingrese su contraseña" required />
                </div>
                <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                <div>
                    <a href="@Url.Action("RecoverPassword", "User")">¿Olvidaste tu contraseña?</a>
                </div>
            }
        </div>

        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-right">
                    <h1>¡Bienvenido!</h1>
                    <p>Por favor, inicia sesión con tus credenciales.</p>
                    <button class="ghost" id="signUp" onclick="window.location.href='@Url.Action("CreateUser", "User")'">Sign Up</button>
                </div>
            </div>
        </div>
    </div>

</body>
